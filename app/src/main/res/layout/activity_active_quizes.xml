<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/colorPrimary"
    android:padding="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_menuIcon"
        android:src="@drawable/ic_menu_black_24dp"
        android:layout_width="52dp"
        android:layout_height="52dp"/>


    <TextView
        android:text="@string/activeQuizes"
        android:fontFamily="@font/cdbold"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="25dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/activity_loading" />

        <ListView
            android:id="@+id/lv_activeQuizes"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



    </androidx.cardview.widget.CardView>

</LinearLayout>