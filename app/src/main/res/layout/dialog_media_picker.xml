<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:padding="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/tv_pickFromGallery"
            android:drawableLeft="@drawable/ic_image_black_24dp"
            android:fontFamily="@font/cdbold"
            android:text="Galeriden Seç"
                android:drawablePadding="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_takeAPhoto"
                android:layout_marginTop="25dp"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
                android:fontFamily="@font/cdbold"
                android:text="Fotoğraf Çek"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>