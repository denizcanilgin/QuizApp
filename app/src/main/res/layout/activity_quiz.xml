<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        >

        <TextView
            android:text="@string/liveQuiz"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/cdbold"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_questionTitle"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="1) Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum?"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/cditalic"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_timer"
            android:text="00"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/redtimer"
            android:fontFamily="@font/cdbold"
            android:textColor="@color/colorWhite"
            android:layout_width="64dp"
            android:layout_height="64dp">

        </TextView>



        <androidx.cardview.widget.CardView
            app:cardCornerRadius="25dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/downarrow"
                android:layout_marginTop="-25dp"
                android:layout_gravity="center|top"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>


            <ListView
                android:padding="15dp"
                android:layout_marginTop="25dp"
                android:id="@+id/lv_answers"
                android:divider="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </androidx.cardview.widget.CardView>




    </LinearLayout>

</RelativeLayout>